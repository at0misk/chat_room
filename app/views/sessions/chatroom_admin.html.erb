<style>
	.header{
		text-align: center;
	}
	.logoutButton{
		float: right;
	}
</style>
<div class="row">
	<div class="col-md-3">
	</div>
	<div class="col-md-6">
		<h2 class="header">Welcome <%= @user.user_name %></h2>
		<h4 class="header">Open Chat Requests:</h4>
		<div class='row'>
			<div class="col-md-3">
			</div>
			<div class="table-responsive col-md-6">
				<table class="table table-striped">
				  <thead>
				    <tr>
				      <th>Topic</th>
				      <th>Username</th>
				      <th>Requested At</th>
				    </tr>
				  </thead>
				  <tbody id="topics">
				   	<% @topics.each do |val| %>
				   		<tr>
						<td><a href="/topics/<%= val.id %>"><%= val.name %></a></td>
						<td><%= val.user.user_name %></td>
						<td><%= val.created_at.strftime("%I:%M %p") %></td>
						</tr>
					<% end %>
				  </tbody>
				</table>
			</div>
			<div class="col-md-3">
			</div>
		</div>
		<a href="/logout" class="logoutButton">Logout</a>
	</div>
	<div class="col-md-3">
	</div>
</div>