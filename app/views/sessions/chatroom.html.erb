<div class="row">
<div class="col-md-3">
</div>
<div class="col-md-6">
<h2>Welcome <%= @user.user_name %></h2>
<h2>Topics:</h2>
<div id="topics">
	<% @topics.each do |val| %>
		<h3><a href="/topics/<%= val.id %>"><%= val.name %></a></h3>
	<% end %>
</div>
<h3>Request Help (Topic):</h3>
<form action="/topics/create" method="POST" data-remote="true">
	<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
	Name: <input type="text" name="topic[name]">
	<input type="hidden" name="topic[user_id]" value="<%= session[:user_id] %>">
	<input type="submit" value="submit">
</form>
<a href="/logout">Logout</a>
</div>
<div class="col-md-3">
</div>
</div>