<style type="text/css">
	.header{
		text-align: center;
		margin-top: 0px;
	}
	.imgDiv{
		display: inline-block;
		height: 98px;
		width: 190px;
		margin-right: 2%;
		margin-bottom: 2%;
	    -moz-transition: all 0.3s;
	    -webkit-transition: all 0.3s;
	    transition: all 0.3s;
	}
	.videoCont{
		height: 600px;
		overflow: auto;
		text-align: center;
	}
	.destroyForm{
		display: inline-block;
		vertical-align: top;
		float: right;
	}
	.topRow{
		margin-top: 2%;
	}
	.imgDiv:hover{
		opacity: 0.8;
	}
	.specialBox{
		border: 1px solid grey;
	    width: 40%;
	    text-align: center;
	    display: inline-block;
		height: 150px;
    	padding: 2%;
    	margin-right: 5%;
    	margin-top: 5%;
	}
	.buttonRow{
		text-align: initial;
	}
	.buttonRow button{
		display: inline-block;
	}
	.buttonRow form{
		display: inline-block;
	}
	.titleHeader{
		margin-top: 0px;
	}
	.cat{
		margin: 0px;
		text-align: right;
		font-size: 0.8em;
	}
</style>
<div class="row topRow">
	<div class="col-md-12 videoCont">
	<% if @specials.length == 0 %>
		<h3>No Specials Found</h3>
	<% else %>
			<% @specials.each do |val| %>
				<div class="specialBox">
					<p class="cat"><%= val.category.name %></p>
					<h3 class="titleHeader"><%= val.title %></h3>
					<p><%= val.description %></p>
				</div>
			<% x += 1 %>
		    <% end %>
		</div>
	<% end %>
</div>