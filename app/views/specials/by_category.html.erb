<style type="text/css">
	.header{
		text-align: center;
		margin-top: 0px;
	}
	.imgDiv{
		display: inline-block;
		height: 98px;
		width: 190px;
		margin-right: 2%;
		margin-bottom: 2%;
	    -moz-transition: all 0.3s;
	    -webkit-transition: all 0.3s;
	    transition: all 0.3s;
	}
	.videoCont{
		height: 600px;
		overflow: auto;
	}
	.destroyForm{
		display: inline-block;
		vertical-align: top;
		float: right;
	}
	.topRow{
		margin-top: 2%;
	}
	.specialBox:hover{
		opacity: 0.8;
	}
	.specialBox{
		border: 1px solid grey;
	    width: 26%;
	    text-align: center;
	    display: inline-block;
		height: 150px;
    	padding: 2%;
    	margin-right: 5%;
    	margin-top: 5%;
	    -moz-transition: all 0.3s;
	    -webkit-transition: all 0.3s;
	    transition: all 0.3s;
	}
	.buttonRow{
		text-align: initial;
	}
	.buttonRow button{
		display: inline-block;
	}
	.buttonRow form{
		display: inline-block;
	}
	.titleHeader{
		margin-top: 0px;
	}
	.cat{
		margin: 0px;
		text-align: right;
		font-size: 0.8em;
	}
	a{
		color: black;
	}
	a:hover{
		text-decoration: none;
		color: black;
	}
</style>
<div class="row headerRow">
	<h2 class="header"><%= @category.name %> Specials</h2>
</div>
<div class="row topRow">
	<div class="col-md-12 videoCont">
	<% if @specials.length == 0 %>
		<h3>No Specials Found</h3>
	<% else %>
			<% @specials.each do |val| %>
				<a href="/specials/<%= val.id %>"><div class="specialBox">
					<h3 class="titleHeader"><%= val.title %></h3>
					<p><%= val.description %></p>
				</div></a>
		    <% end %>
		</div>
	<% end %>
</div>