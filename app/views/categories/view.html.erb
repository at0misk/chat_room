<style type="text/css">
	.header{
		text-align: center;
	}
	.formButtons{
		text-align: center;
	}
	.formCol{
		text-align: center;
	}
	.imgDiv{
		display: inline-block;
		height: 98px;
		width: 190px;
		margin-right: 2%;
		margin-bottom: 2%;
	}
	.videoText{
		color: white;
	    text-align: center;
	    margin-top: 20%;
	}
	.box{
		display: inline-block;
		height: 98px;
		width: 190px;
	    border: 1px solid grey;
	}
	.boxtext{
		text-align: center;
	    margin-top: 20%;
	}
	.boxtext{
		color: black
	}
	.right{
		height: 392px;
		border: 1px solid grey;
	}
	.topRow{
		margin-top: 2%;
	}
