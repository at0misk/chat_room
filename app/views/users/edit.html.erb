<style type="text/css">
	.formHeader{
		text-align: center;
	}
	.formButtons{
		text-align: center;
	}
	input{
		text-align: center;
	}
</style>
<div class="row">
	<div class="col-md-6">
		<h3 class="formHeader">Edit User Info</h3>
			<form class="form-horizontal" action="/users/edit" method="POST">
				<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
				<input name="_method" value="patch" type="hidden">
				<div class="form-group">
				    <label for="email" class="col-sm-3 control-label">
				        User Name:</label>
				    <div class="col-sm-6">
				        <input type="text" name="user[user_name]" class="form-control" id="userName" value="<%= @user.user_name %>" />
				    </div>
				</div>
				<div class="form-group">
				    <label for="password" class="col-sm-3 control-label">
				        Password</label>
				    <div class="col-sm-6">
				        <input type="password" name="user[password]" class="form-control" id="passwordLog" />
				    </div>
				</div>
				<div class="row">
				    <div class="col-sm-3">
				    </div>
				    <div class="col-sm-6 formButtons">
				        <button type="submit" class="btn btn-primary btn-sm">
				            Update</button>
				        <!-- <a href="javascript:;">Forgot your password?</a> -->
				    </div>
				</div>
			</form>
	</div>
<div class="row">
	<div class="col-md-6">
